@page "{id:int}"
@model MyBlog.Presentation.MVC.Areas.Administrator.Pages.ArticleCategory.EditModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Edit Article Category</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="ArticleCategory.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="Title" class="control-label">Title:</label>
                            <input type="text" asp-for="ArticleCategory.Title" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-success" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administrator">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>